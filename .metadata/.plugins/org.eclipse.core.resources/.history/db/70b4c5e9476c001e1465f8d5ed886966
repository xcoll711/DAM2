package exercise4;

import java.awt.EventQueue;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JFrame;
import javax.swing.JLabel;
import java.awt.BorderLayout;
import javax.swing.JButton;
import javax.swing.SwingConstants;

public class Exercise4 {

    private JFrame frame;
    private JLabel lblHelloWorld;

    /**
     * Launch the application.
     */
    public static void main(String[] args) {
        EventQueue.invokeLater(new Runnable() {
            public void run() {
                try {
                    Exercise4 window = new Exercise4();
                    window.frame.setVisible(true);
                } catch (Exception e) {
                    e.printStackTrace();
                }
            }
        });
    }

    /**
     * Create the application.
     */
    public Exercise4() {
        initialize();
    }

    /**
     * Initialize the contents of the frame.
     */
    private void initialize() {
        frame = new JFrame();
        frame.setBounds(100, 100, 450, 300);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

        lblHelloWorld = new JLabel("");
        // Centrar el texto en el JLabel
        lblHelloWorld.setHorizontalAlignment(SwingConstants.CENTER);
        frame.getContentPane().add(lblHelloWorld, BorderLayout.CENTER);

        JButton btnClick = new JButton("Click here!!");
        frame.getContentPane().add(btnClick, BorderLayout.WEST);

        JButton btnClear = new JButton("Borrar");
        frame.getContentPane().add(btnClear, BorderLayout.EAST);

        // Agregar un ActionListener al bot贸n "Click here!!"
        btnClick.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                // Cuando se hace clic en el bot贸n, establecer el texto del JLabel
                lblHelloWorld.setText("Hello");
            }
        });

        // Agregar un ActionListener al bot贸n "Borrar"
        btnClear.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                // Cuando se hace clic en el bot贸n "Borrar", eliminar el texto del JLabel
                lblHelloWorld.setText("");
            }
        });

        // Centrar la ventana en la pantalla
        frame.setLocationRelativeTo(null);
    }
}
