package u3e06AD;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

public class Test {
    public static void main(String[] args) {
        // Datos de conexión para localhost
        String urlConnection = "jdbc:mysql://localhost:3306/ad";
        String user = "root";
        String pwd = "";

        try (Connection c = DriverManager.getConnection(urlConnection, user, pwd);
             Statement sConsulta = c.createStatement(ResultSet.TYPE_SCROLL_INSENSITIVE, ResultSet.CONCUR_UPDATABLE)) {

            // Crea la tabla
            String createTableQuery = "CREATE TABLE productes (id INT AUTO_INCREMENT, nom VARCHAR(100), preu DOUBLE(10,2), quantitatEnStock INT, PRIMARY KEY (id))";
            sConsulta.executeUpdate(createTableQuery, Statement.RETURN_GENERATED_KEYS);

            // Inserta un nuevo producto
            ResultSet rs = sConsulta.getGeneratedKeys();
            if (rs.next()) {
                int newProductId = rs.getInt(1);

                rs.moveToInsertRow();
                rs.updateInt("id", newProductId);
                rs.updateString("nom", "NouClient");
                rs.updateDouble("preu", 33983.0);
                rs.updateInt("quantitatEnStock", 33983);
                rs.insertRow();
            }

        } catch (SQLException e) {
            muestraErrorSQL(e);
        }
    }

    private static void muestraErrorSQL(SQLException e) {
        // Método para manejar errores SQL, puedes personalizarlo según tus necesidades.
        e.printStackTrace();
    }
}
